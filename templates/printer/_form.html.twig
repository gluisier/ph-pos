{{ form_start(form) }}
    <div class="row">
        {{ form_row(form.manufacturer, {'row_attr': {'class': 'col-md-6 mb-3'}})}}
        {{ form_row(form.model, {'row_attr': {'class': 'col-md-6 mb-3'}})}}
    </div>
    <div class="row">
		<div class="col-md-6 mb-3">
			{{ form_label(form.id) }}
			<div class="input-group">
				<button type="button" class="btn btn-outline-success slugger" title="{{ 'app.printer._form.slugger'|trans }}" aria-label="{{ 'app.printed._form.slugger'|trans }}" data-source="#{{ form.manufacturer.vars.id }}, #{{ form.model.vars.id }}" data-target="{{ form.id.vars.id }}">ü™Ñ</button>
				{{ form_widget(form.id) }}
			</div>
			{{ form_help(form.id) }}
			{{ form_errors(form.id) }}
		</div>
		<div class="col-md-6 mb-3">
			{{ form_label(form.ip) }}
			<div class="input-group">
				{{ form_widget(form.ip) }}
				{{ form_widget(form.port, {'attr': {'size': 6}}) }}
			</div>
			{{ form_help(form.ip) }}
			{{ form_help(form.port) }}
			{{ form_errors(form.ip) }}
			{{ form_errors(form.port) }}
		</div>
    </div>
    {{ form_row(form.status, {
		'attr': {'class': 'btn-group', 'role': 'group'},
		# 'label_attr': {'class': 'btn btn-outline-secondary'}
	}) }}
	<button class="btn btn-primary float-start" title="{{ 'global.action.validate'|trans }}" aria-label="{{ 'global.action.validate'|trans }}">‚úîÔ∏è</button>
{{ form_end(form) }}
