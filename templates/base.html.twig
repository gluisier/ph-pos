<!DOCTYPE html>
<html lang="{{ app.request.locale }}" xml:lang="{{ app.request.locale }}" data-bs-theme="auto">
	<head>
		<meta charset="UTF-8" />
		<title>{% block title %}{{ 'global.site_name'|trans }}{% endblock %}</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>🎪</text></svg>" />
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
		<meta http-equiv="Content-Language" content="{{ app.request.locale }}" />
		<link rel="stylesheet" href="{{ assets_host }}/twitter-bootstrap/5.3.7/css/bootstrap.min.css" integrity="sha512-fw7f+TcMjTb7bpbLJZlP8g2Y4XcCyFZW8uy8HsRZsH/SwbMw0plKHFHr99DN3l04VsYNwvzicUX/6qurvIxbxw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<link rel="stylesheet" href="{{ asset('css/style.css') }}" />
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		{% block menu %}{{ include('menu.html.twig') }}{% endblock %}
		<div class="{% block container_type %}container{% endblock %}">
			{% block flash %}
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label }} mt-{{ loop.first ? '3' : '1' }}">
						{{ message|raw }}
					</div>
				{% endfor %}
			{% endfor %}
			{% endblock flash %}
			{% block body %}
			<div class="d-grid gap-2 col-6 col-lg-4 col-xl-3 mx-auto mt-4">
				<a href="{{ path('item_prices') }}" class="btn btn-lg btn-info" type="button">{{ 'app.fields.item.public.label.short'|trans ~ ' ' ~ 'app.menu.items.prices'|trans }}</a>
				<a href="{{ path('sales_index') }}" class="btn btn-lg btn-primary">{{ 'app.fields.item.available.label.short'|trans ~ ' ' ~ 'app.menu.operating.sales'|trans }}</a>
				<hr />
				<a href="{{ path('production_index') }}" class="btn btn-lg btn-secondary">🏭 {{ 'app.menu.operating.production'|trans }}</a>
			</div>
			{% endblock %}
		</div>
		<div id="Modal" class="modal">
			<div class="modal-dialog modal-dialog-scrollable modal-xl">
				<div class="modal-content" data-empty-content="&lt;div class=&quot;text-center&quot;&gt;⏳&lt;span class=&quot;visually-hidden&quot;&gt;{{ 'global.info.loading'|trans }}&lt;/span&gt;&lt;/div&gt;">
					{% block modal_content %}<div class="text-center">⏳<span class="visually-hidden">{{ 'global.info.loading'|trans }}</span></div>{% endblock %}
				</div>
			</div>
		</div>
		<script src="{{ assets_host }}/twitter-bootstrap/5.3.7/js/bootstrap.bundle.min.js" integrity="sha512-Tc0i+vRogmX4NN7tuLbQfBxa8JkfUSAxSFVzmU31nVdHyiHElPPy2cWfFacmCJKw0VqovrzKhdd2TSTMdAxp2g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>