{% block choice_label -%}
	{# remove the checkbox-inline and radio-inline class, it's only useful for embed labels #}
	{# remove as well btn classes #}
	{%- set label_attr = label_attr|merge({class: label_attr.class|default('')|replace({
		'checkbox-inline': '',
		'radio-inline': '',
		'checkbox-custom': '',
		'radio-custom': '',
		'switch-custom': '',
		'btn': '',
		'-outline-': ''
	})|trim}) -%}
	{{- block('form_label') -}}
{% endblock choice_label %}
