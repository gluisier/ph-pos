<div class="modal-header">
	<h5 class="modal-title">{{ 'app.sales.payment_method.dialog.title'|trans }}</h5>
</div>
{% block modal_content %}{% endblock %}
<div class="modal-footer">
	{%- if is_granted('IS_AUTHENTICATED_FULLY') and app.user.printer is defined and app.user.printer is not none -%}
	<button type="submit" form="Main" class="btn btn-primary btn-lg w-100 wait" aria-label="
			{{- 'global.action.print'|trans -}}
		" data-action="print">🖨️</button>
	{%- else -%}
	<button type="submit" form="Main" class="btn btn-primary btn-lg w-100" aria-label="
			{{- 'global.action.validate'|trans -}}
		" data-action="validate">✔️</button>
	{%- endif -%}
</div>