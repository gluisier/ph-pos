<form method="post" action="{{ path('payment_method_delete', {'id': payment_method.id}) }}" onsubmit="return confirm('{{ 'global.action.confirm_delete'|trans }}');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payment_method.id) }}">
	<button class="btn btn-danger" title="{{ 'global.action.delete'|trans }}" aria-label="{{ 'global.action.delete'|trans }}">🗑️</button>
</form>
